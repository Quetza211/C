#include <stdio.h>
//Numeros pares hasta el numero x
int main(){
	int i, j, par, n = 0 ;
    printf("Ingresa la cantidad de numeros pares que desea: ");
    scanf("%d", &n);
    n *= 2;
        for(i=1; i<=n; i++){
            par = 0;
			if( i%2 == 0){
				par = 1;
			}
            if(par == 1){
            printf(" %d ", i);
            }
        }
}
